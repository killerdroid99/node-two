doctype html
html
  head
    title= title
    
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css'
    integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u' crossorigin='anonymous')
    
    link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    
    link(rel='stylesheet', href='/stylesheets/style.css')
    
  body
block content
  h1 Add new message

  form(action="/new", method="POST") 
    div(class="mb-3") 
      label(for="Name" class="form-label") Name
      input(type="text", class="exampleFormControlInput1 form-control", id="Name", name="Name")
    div(class="mb-3") 
      label(for="Message" class="form-label") Message
      textarea(id="Message", name="Message" class="exampleFormControlTextarea1 form-control" rows="3")
    button(type="submit", class="btn btn-primary") Submit

   
  a(href="/" class="btn btn-primary btn-lg") Back
  script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js'
          integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa' crossorigin='anonymous')